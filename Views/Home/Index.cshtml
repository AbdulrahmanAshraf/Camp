            <div class="col-md-12">
                <div class="overlay-img">
                    <div class="section-heading text-center">
                        <img src="../images/vicon.png" alt="icon section" class="custom-image">
                        <h4 class="section_title custom_title">تسجيل الدخول</h4>
                    </div>
                </div>
                <div class="overlay-img"></div>
            </div>
        </div>
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-6 mx-auto">
                    <div class="login-page-container card border-0 mx-auto">
                        <div class="login-page-header mt-3 text-center">
                            <h5>تسجيل دخول القطاع الخاص</h5>
                        </div>
                        <div class="login-page-form mt-2">
                            <div class="row">
                                <div class="input-box col-md-9 mx-auto">

                                    <div class="row">
                                        <div class="col-md-12">
                                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form" }))
                                            {
                                                @Html.AntiForgeryToken();
                                                <input type="hidden" name="grtoken" id="hdnGrToken" />
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="alert alert-danger alert-dismissible fade  @(TempData["Message"] == null ? "" : "show") bg-transparent border-0">
                                                            <a href="#" class="close d-inline text-danger" data-dismiss="alert" aria-label="close">&times;</a>
                                                            @TempData["Message"]
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label class="form-label">اسم المستخدم</label>
                                                        <div class="form-group form-group-sm">
                                                            <input class="form-control login-page-form-input" type="text" name="username" id="txtUsername" asp-for="UserName">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <label class="form-label">كلمة المرور</label>
                                                        <div class="form-group form-group-sm">
                                                            <input class="form-control login-page-form-input" type="password" name="password" id="txtpassword" asp-for="Password">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mx-auto mb-2">
                                                        <div>
                                                            <button id="send-message-btn" class="btn btn-sm m-0 login-page-form-loginBtn" type="submit">دخول</button>
                                                        </div>

                                                    </div>

                                                </div>
                                            }

                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>

<section class="cat-area img-bg-bg workshop-section">
    <div class="container workshop-section-container">
        <div class="row">
            <div class="col-md-12">
                <div class="overlay-img">
                    <div class="section-heading text-center">
                        <img src="../images/vicon.png" alt="icon section" class="custom-image">
                        <h4 class="section_title custom_title">register</h4>
                    </div>
                </div>
                <div class="overlay-img"></div>
            </div>
        </div>
        <div class="container" dir="rtl">
            <div class="form-group">
                <div class="row">
                    <div class="col-10 m-auto">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <span class="h3">تسجيل قطاع خاص</span>
                            </div>
                            <div class="col-12 mt-5 row" id="div-register">

                                <div class="col-12 steps-page-content">
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "register-form" }))
                                    {
                                        @Html.AntiForgeryToken();
                                        <!------------------------------------->
                                        <input type="hidden" name="grtoken" id="hdnGrToken" />
                                        <div id="register-form-wizard">

                                            <h3>البيانات الأساسية</h3>
                                            <section data-steps="1">
                                                <div class="card-body p-0">
                                                    <div class="form-group mb-2">
                                                        <label class="form-label">رقم السجل<span class="red-message">*</span>:</label>
                                                        <input type="text" class="form-control form-control-solid" placeholder="ادخل رقم سجل الجهة" name="registrationNo" id="txtRegistrationNo" pattern="[أ-يa-zA-Z0-9]{10}" maxlength="10" />
                                                    </div>
                                                    <div class="form-group mb-2">
                                                        <label class="form-label form-label">اسم الجهة<span class="red-message">*</span>:</label>
                                                        <input type="text" class="form-control form-control-solid" placeholder="ادخل اسم الجهة" name="entityName" id="txtEntityName" />
                                                    </div>
                                                    <div class="form-group mb-2">
                                                        <label class="form-label">عنوان المقر<span class="red-message">*</span>:</label>
                                                        <input type="text" class="form-control form-control-solid" placeholder="ادخل عنوان مقر الجهة" name="address" id="txtAddress" />
                                                    </div>
                                                </div>
                                            </section>
                                            <h3>بيانات المنسق</h3>
                                            <section data-steps="2">
                                                <div class="card-body p-0">
                                                    <div class="form-group">
                                                        <label class="form-label">الاسم<span class="red-message">*</span>:</label>
                                                        <input type="text" class="form-control form-control-solid" placeholder="ادخل اسم منسق الجهة" name="coordinatorFullName" id="txtcoordinatorFullName" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="form-label">البريد الإلكتروني<span class="red-message">*</span>:</label>
                                                        <input type="text" class="form-control form-control-solid" placeholder="ادخل البريد الإلكتروني لمنسق الجهة" name="coordinatorEmail" id="txtCoordinatorEmail" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="form-label">الجوال<span class="red-message">*</span>:</label>
                                                        <input type="number" class="form-control form-control-solid" placeholder="ادخل رقم جوال منسق الجهة" name="mobile" id="txtMobile" />
                                                    </div>
                                                </div>
                                            </section>
                                            <h3>بيانات دخول المنسق</h3>
                                            <section data-steps="3">
                                                <div class="card-body p-0">
                                                    <div class="form-group">
                                                        <label class="form-label">اسم المستخدم<span class="red-message">*</span>:</label>
                                                        <input type="text" class="form-control form-control-solid" placeholder="ادخل اسم الدخول للمنصة" name="username" id="txtUsername" pattern="^[a-zA-Z0-9]+$" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="form-label">كلمة المرور<span class="red-message">*</span>:</label>
                                                        <input type="password" class="form-control form-control-solid" placeholder="ادخل كلمة المرور" name="password" id="txtPassword" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="form-label">تأكيد كلمة المرور<span class="red-message">*</span>:</label>
                                                        <input type="password" class="form-control form-control-solid" placeholder="ادخل تأكيد لكلمة المرور" name="confirmPassword" id="txtConfirmPassword" />
                                                    </div>
                                                </div>
                                            </section>
                                        </div>
                                        <!------------------------------------->
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


